<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Fragment_pastry_first"

    android:layout_width="290dp"
    android:layout_height="450dp"

    android:layout_marginLeft="60dp"
    android:layout_marginRight="60dp"
    android:layout_marginTop="30dp"
    android:layout_marginBottom="30dp" >

    <LinearLayout
        android:layout_width="290dp"
        android:layout_height="450dp"

        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"

        android:background="@drawable/layout_box"
        android:orientation="vertical">

        <TextView
            android:id="@+id/editTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:background="@null"
            android:text="EditText"
            android:textSize="30sp" />


        <TextView
            android:id="@+id/editContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="11dp"
            android:layout_marginRight="25dp"
            android:background="@null"
            android:text="EditText"
            android:textColor="#605C5C"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/ImageView"
            android:layout_width="290dp"
            android:layout_height="230dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/pastry_img1" />

        <LinearLayout
            android:layout_width="110dp"
            android:layout_height="22dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/sale_box">

            <TextView
                android:id="@+id/sale_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="0dp"
                android:background="@null"
                android:text="마감세일 20:00"
                android:textSize="12sp"
                android:textColor="#FF0000" />

        </LinearLayout>

        <TextView
            android:id="@+id/price_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="20dp"
            android:background="@null"
            android:text="1500₩ 부터"
            android:textColor="#0C0C0C"
            android:textSize="15sp" />

    </LinearLayout>

</FrameLayout>
