<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- 테두리 색상 및 두께 설정 -->
    <stroke
        android:width="1dp"
        android:color="@color/green"
        />

    <!-- 코너 라디우스 설정 (원하는 값으로 조정) -->
    <corners
        android:radius="8dp" />

    <!-- 내부 채우기 색상 설정 (원하는 색상으로 변경) -->
    <solid
        android:color="@android:color/white" />

    <!-- EditText의 내부 패딩 설정 (텍스트와 테두리 간의 공간을 늘릴 수 있음) -->
    <padding
        android:left="8dp"
        android:right="8dp"
        android:top="8dp"
        android:bottom="8dp" />

</shape>
